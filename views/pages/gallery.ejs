<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
    <script src="https://code.jquery.com/jquery-1.12.3.min.js"></script>
    <script src="http://localhost:4000/gallery.js"></script>
    <link rel="stylesheet" href="http://localhost:4000/gallery.css">
</head>
<header>
    <% include ../partials/header %>
</header>

<main>
        <div class="container">
          <% teller = 0 %>
          <% filelist.forEach(function(bilde){ %>
          <div class="row">
            <div class="pic-container">
              <div class="parent">
                <div class="wrapper thumb-1">
                  <div class="content">
                    <div class="img"><img src="/art/<%= bilde %>" /></div>
                    <div class="text"><strong><%= bilde %></strong>
                      <div class="line title">Dette er TITLE</div>
                      <div class="line subtitle">Dette er SubTITLE</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%  teller ++
            }); %>
        </div>
</main>
<footer>
    <% include ../partials/footer %>
</footer>
</html>
