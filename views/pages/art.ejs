<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/minstil.css">
    <link rel="stylesheet" href="/art.css">
</head>


<body >
<main>
  <h2>Det er <%= filelist.length %> pieces</h2>
  <div class="warning">This demo only works in browsers that support CSS Grid Layout. If you can see this message, then your browser isn't supporting Grid. You can try out Grid in <a href="https://nightly.mozilla.org/">Firefox Nightly</a> or <a href="http://gridbyexample.com/browsers/">other browsers by flipping a flag</a>.</div>

    <ul>
    <% teller = 0 %>
    <% filelist.forEach(function(bilde){
       if(teller % 1){ %>
          <li class="highlight-box"><img src="/art/<%= bilde %>" /></li>
      <% }else if(teller % 3){ %>
        <li class="highlight-wide"><img src="/art/<%= bilde %>" /></li>
      <% }else if(teller % 5){ %>
        <li class="highlight-tall"><img src="/art/<%= bilde %>" /></li>
      <% }else { %>
        <li><img src="/art/<%= bilde %>" /></li>
      <% }
      teller ++
      }); %>
    </ul>

</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>
